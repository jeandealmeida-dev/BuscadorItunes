        <item name="android:textColorHint">@color/light_text_color_hint</item>
        <item name="android:textColorPrimaryInverse">@color/light_text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/light_text_color_secondary_inverse
        </item>
        <item name="android:textColorTertiaryInverse">@color/light_text_color_tertiary_inverse
        </item>
        <item name="android:textColorLinkInverse">@color/light_text_color_link_inverse</item>
        <item name="android:textColorHintInverse">@color/light_text_color_hint_inverse</item>
        <!-- Custom Attr -->
        <item name="bottomSheetTheme">@style/AppTheme.Dark.BottomSheet</item>
    </style>

