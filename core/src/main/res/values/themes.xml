    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status Bar -->
        <item name="windowActionBar">true</item>
        <item name="android:statusBarColor">@color/light_status_color</item>

        <!-- General theme colors -->
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="colorAccent">@color/light_color_accent</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:colorForeground">@color/light_foreground</item>

        <!-- Text Appearance styles -->
        <!--        <item name="android:textViewStyle">@style/TextViewStyle.Condensed</item>-->
