<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Status Bar -->
        <item name="windowActionBar">true</item>
        <item name="android:statusBarColor">@color/status_color</item>

        <!-- General theme colors -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/foreground</item>

        <!-- Text Appearance styles -->
        <!--        <item name="android:textViewStyle">@style/TextViewStyle.Condensed</item>-->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:textColorTertiary">@color/text_color_tertiary</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textColorPrimaryInverse">@color/text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/text_color_secondary_inverse</item>
        <item name="android:textColorTertiaryInverse">@color/text_color_tertiary_inverse</item>
        <item name="android:textColorLinkInverse">@color/text_color_link_inverse</item>
        <item name="android:textColorHintInverse">@color/text_color_hint_inverse</item>
        <!-- Custom Attr -->
        <item name="iconColor">@color/icon_color</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>

        <!-- General theme colors -->
        <item name="colorPrimary">@color/bs_color_primary</item>
        <item name="colorPrimaryDark">@color/bs_color_primary_dark</item>
        <item name="colorAccent">@color/bs_color_accent</item>
        <item name="backgroundColor">@color/bs_background</item>
        <item name="android:colorForeground">@color/bs_foreground</item>

        <!-- Text Appearance styles -->
        <item name="android:textColorPrimary">@color/bs_text_color_primary</item>
        <item name="android:textColorSecondary">@color/bs_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/bs_text_color_tertiary</item>
        <item name="android:textColorLink">@color/bs_text_color_link</item>
        <item name="android:textColorHint">@color/bs_text_color_hint</item>
        <item name="android:textColorPrimaryInverse">@color/bs_text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/bs_text_color_secondary_inverse</item>
        <item name="android:textColorTertiaryInverse">@color/bs_text_color_tertiary_inverse</item>
        <item name="android:textColorLinkInverse">@color/bs_text_color_link_inverse</item>
        <item name="android:textColorHintInverse">@color/bs_text_color_hint_inverse</item>
    </style>
</resources>
